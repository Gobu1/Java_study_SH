<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
   
<mapper namespace="com.iu.start.board.qna.QnaDAO">
	
	<select id="getList" resultType="QnaDTO">
		 SELECT * FROM
			(SELECT ROWNUM R, N.* FROM
				(SELECT * FROM QNA ORDER BY NUM DESC) N)
					WHERE R BETWEEN 1 AND 10
	</select>
	
	<select id="getDetail" parameterType="BoardDTO" resultType="QnaDTO">
		SELECT * FROM QNA WHERE NUM = #{num}
	</select>
	
	<select id="setAdd" parameterType="QnaDTO">
		INSERT INTO QNA VALUES (BOARD_SEQ.NEXTVAL, #{title}, #{contents}, #{writer}, sysdate, 0)
	</select>
	
	<select id="setUpdate" parameterType="QnaDTO">
		UPDATE NOTICE SET QNA = #{title}, CONTENTS = #{contents} 
			WHERE NUM = #{num}
	</select>
	
	<select id="setDelete" parameterType="QnaDTO">
		DELETE FROM QNA WHERE NUM = #{num}
	</select>
	
	
	
</mapper>