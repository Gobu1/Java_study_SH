<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.iu.start.bankBook.BankBookDAO">

	<select id="delete" parameterType="BankBookDTO">
	DELETE FROM BANKBOOK WHERE BOOKNUM = #{bookNum}
	</select>
	
	<select id="setUpdate" parameterType="BankBookDTO">
	UPDATE BANKBOOK SET BOOKNAME = #{bookName} , BOOKRATE = #{bookRate} WHERE BOOKNUM = #{bookNum}
	</select>
	
	<select id="setBankBook" parameterType="BankBookDTO">
	INSERT INTO BANKBOOK VALUE (#{bookNum}, #{bookName}, #{bookRate}, #{bookSale}, #{bookContents})
	</select>
	
	<select id="getList" resultType="BankBookDTO">
	SELECT * FROM BANKBOOK ORDER BY BOOKNUM ASC
	</select>
	
	<select id="getDetail" resultType="BankBookDTO">
	SELECT BOOKNUM, BOOKNAME, BOOKRATE, BOOKSALE FROM BANKBOOK WHERE BOOKNUM = #{bookNum}
	</select>
	

</mapper>