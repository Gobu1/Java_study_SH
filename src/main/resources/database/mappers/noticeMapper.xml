<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
   
<mapper namespace="com.iu.start.board.notice.NoticeDAO">
	
	<select id="getList" parameterType="java.util.Map" resultType="NoticeDTO">
		SELECT * FROM
			(SELECT ROWNUM R, N.* FROM
				(SELECT * FROM NOTICE ORDER BY NUM DESC) N)
					WHERE R BETWEEN #{startRow} AND #{lastRow}
	</select>
	
	<select id="getDetail" parameterType="BoardDTO" resultType="NoticeDTO">
		SELECT * FROM NOTICE WHERE NUM = #{num}
	</select>
	
	<select id="setAdd" parameterType="NoticeDTO">
		INSERT INTO NOTICE VALUES (BOARD_SEQ.NEXTVAL, #{title}, #{contents}, #{writer}, sysdate, 0)
	</select>
	
	<select id="setUpdate" parameterType="NoticeDTO">
		UPDATE NOTICE SET TITLE = #{title}, CONTENTS = #{contents} 
			WHERE NUM = #{num}
	</select>
	
	<select id="setDelete" parameterType="BoardDTO">
		DELETE FROM NOTICE WHERE NUM = #{num}
	</select>
	
	<select id="getCount" resultType="Long">
		SELECT COUNT(NUM) FROM NOTICE
	</select>
	
	
</mapper>